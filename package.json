{
	"name": "market-place",
	"version": "1.0.0",
	"type": "module",
	"description": "Market Place is a web application that allows users to buy and sell products at single place.",
	"main": "index.js",
	"scripts": {
		"start": "node backend/index.js",
		"client": "npm start --prefix frontend",
		"server": "nodemon backend/index.js",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
		"test": "jest --watchAll --verbose"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vivek-0206/Market-Hub.git"
	},
	"keywords": [
		"Market",
		"Client",
		"Customers",
		"Products."
	],
	"author": "Vivek Patel, Yatharth Shah, Om Italiya, Krunalkumar Mangukiya, Sheshankumar Patel",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Vivek-0206/Market-Hub/issues"
	},
	"homepage": "https://market-hub.onrender.com/",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"firebase": "^10.5.0",
		"firebase-admin": "^11.11.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^7.5.3",
		"multer": "^1.4.5-lts.1",
		"node-mailjet": "^6.0.4"
	},
	"devDependencies": {
		"concurrently": "^8.2.1",
		"jest": "^29.7.0",
		"nodemon": "^3.0.1"
	}
}
